include "m8c.inc"


;--------------------------------------------------
; Constants for PWM8a API's.
;--------------------------------------------------

PWM8a_CONTROL_REG_START_BIT:               equ 0x01    ; Control register start bit
PWM8a_INT_REG:                             equ 0x0e1
PWM8a_INT_MASK:                            equ 0x10


;--------------------------------------------------
; Constants for PWM8a user defined values
;--------------------------------------------------

PWM8a_PERIOD:                              equ 0xff
PWM8a_PULSE_WIDTH:                         equ 0xe0


;--------------------------------------------------
; Register Address Constants for PWM8a
;--------------------------------------------------

PWM8a_COUNTER_REG:                     equ 0x30   ; DR0 Count register
PWM8a_PERIOD_REG:                      equ 0x31   ; DR1 Period register
PWM8a_COMPARE_REG:                     equ 0x32   ; DR2 Compare register
PWM8a_CONTROL_REG:                     equ 0x33   ; Control register
PWM8a_FUNC_REG:                        equ 0x30   ; Function register
PWM8a_INPUT_REG:                       equ 0x31   ; Input register
PWM8a_OUTPUT_REG:                      equ 0x32   ; Output register


;--------------------------------------------------
; PWM8a Macro 'Functions'
;--------------------------------------------------

   macro PWM8a_Start_M
   or    reg[PWM8a_CONTROL_REG],  PWM8a_CONTROL_REG_START_BIT
   endm

   macro PWM8a_Stop_M
   and   reg[PWM8a_CONTROL_REG], ~PWM8a_CONTROL_REG_START_BIT
   endm

   macro PWM8a_EnableInt_M
   M8C_EnableIntMask PWM8a_INT_REG, PWM8a_INT_MASK
   endm

   macro PWM8a_DisableInt_M
   M8C_DisableIntMask PWM8a_INT_REG, PWM8a_INT_MASK
   endm


