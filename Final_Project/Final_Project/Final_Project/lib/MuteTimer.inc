include "m8c.inc"


;--------------------------------------------------
; Constants for MuteTimer API's.
;--------------------------------------------------

MuteTimer_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
MuteTimer_INT_REG:                         equ 0x0e1
MuteTimer_INT_MASK:                        equ 0x40


;--------------------------------------------------
; Constants for MuteTimer user defined values
;--------------------------------------------------

MuteTimer_PERIOD:                          equ 0xa0
MuteTimer_COMPARE_VALUE:                   equ 0x64


;--------------------------------------------------
; Register Address Constants for MuteTimer
;--------------------------------------------------

MuteTimer_COUNTER_REG:                 equ 0x38   ; DR0 Counter register
MuteTimer_PERIOD_REG:                  equ 0x39   ; DR1 Period register
MuteTimer_COMPARE_REG:                 equ 0x3a   ; DR2 CompareValue register
MuteTimer_CONTROL_REG:                 equ 0x3b   ; Control register
MuteTimer_FUNC_REG:                    equ 0x38   ; Function register
MuteTimer_INPUT_REG:                   equ 0x39   ; Input register
MuteTimer_OUTPUT_REG:                  equ 0x3a   ; Output register


;--------------------------------------------------
; MuteTimer Macro 'Functions'
;--------------------------------------------------

   macro MuteTimer_Start_M
   or    reg[MuteTimer_CONTROL_REG],  MuteTimer_CONTROL_REG_START_BIT
   endm

   macro MuteTimer_Stop_M
   and   reg[MuteTimer_CONTROL_REG], ~MuteTimer_CONTROL_REG_START_BIT
   endm

   macro MuteTimer_EnableInt_M
   M8C_EnableIntMask MuteTimer_INT_REG, MuteTimer_INT_MASK
   endm

   macro MuteTimer_DisableInt_M
   M8C_DisableIntMask MuteTimer_INT_REG, MuteTimer_INT_MASK
   endm


